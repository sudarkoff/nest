#!/bin/bash

# make sure we're running as root
if [ `id -u` -ne 0 ]; then
   echo "`date \"+%Y-%m-%d %H:%M:%S\"` [ERROR] This script requires root privileges to run."
   exit -1
fi

# OSX 10.10
discoveryutil udnsflushcaches
